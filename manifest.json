{
  "manifest_version": 3,
  "name": "Giải mã HEX sang Text",
  "version": "1.0.0",
  "description": "Giải mã chuỗi HEX thành văn bản với 3 chế độ: bôi đen, popup và chuột phải",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "shared/decoder.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Giải mã HEX sang Text"
  },
  "background": {
    "service_worker": "background.js"
  }
}